@using crm_dotnet.Models.entity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    TauxAlerteBudget [] listTaux = (TauxAlerteBudget[])ViewData["listTaux"];
}

<div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            @Html.Partial("_leftSideBar")
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Modification de taux d'alerte de budget</h4>
                                    </div>
                                    <div class="card-body">
                                        <form asp-controller="TauxAlerte" asp-action="Insert" method="post">
                                           
                                            <div class="form-group">
                                                <label>Taux %</label>
                                                <input class="form-control" type="number" name="taux" step="0.01" min="0" required/>
                                            </div>
                                           
                                            <button type="submit" class="btn btn-primary">Modifier</button>
                                           
                                        </form>

                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Historique des taux</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped" id="table-1">
                                                <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>taux %</th>
                                                    <th>Date d'ajout</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var t in listTaux)
                                                    {
                                                        <tr>
                                                            <td>@t.Id</td>
                                                            <td>@t.Taux</td>
                                                            <td>@t.Date_ajout</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>