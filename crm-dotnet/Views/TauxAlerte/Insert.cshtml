<div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            @Html.Partial("_leftSideBar")
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Modification de taux d'alerte de budget</h4>
                                    </div>
                                    <div class="card-body">
                                        <form asp-controller="TauxAlerte" asp-action="Insert" method="post">
                                           
                                            <div class="form-group">
                                                <label>Taux %</label>
                                                <input class="form-control" type="number" name="taux" min="0" required/>
                                            </div>
                                           
                                            <button type="submit" class="btn btn-primary">Modifier</button>
                                           
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>